<%- include ("partials/header") %> 

<div class="ui main text container">
    <div class="ui huge header">RESTful Blog</div>
    <div class="ui top attached segment">
        <div class="ui devided items">
            <% blogs.forEach(function (blog) { %>
                <div class="item">
                    <div class="image">
                        <img src="<%= blog.image %>">
                    </div>
                    <div class="content">
                        <a href="/blogs/<%= blog._id %>"><%= blog.title %></a>
                        <div class="meta">
                            <span><%= blog.create.toDateString() %></span>
                        </div>
                        <div class="description">
                            <p><%= blog.body.substring(0, 100)%>... </p>
                        </div>
                    </div>
                    <div class="extra">
                        <a href="/blogs/<%= blog._id %> " class="ui floated basic violet button">
                        Read More
                        <i class="righ chevron icon"></i>
                        </a>
                    </div>
                </div>
            <% }); %> 
        </div>
    </div>
</div>

<%- include ("partials/footer") %> 

